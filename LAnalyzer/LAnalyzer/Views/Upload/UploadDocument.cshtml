@{
    ViewBag.Title = "UploadDocument";
    string myMessage = ViewBag.Message;
}

<h2>UploadDocument</h2>

@using (Html.BeginForm("Upload", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <p>@myMessage</p>
    <label>Give a name to your project:</label><br /><input type="text" name="Project" id="Project" onchange="ShowFile()" />
    <input type="file" id="file" name="file" accept=".xls, .xlsx, .csv" />
    <input type="submit" name="Submit" id="Submit" value="Upload" />
}

